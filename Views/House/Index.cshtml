@model IEnumerable<HouseViewingMVC.Models.House.HouseListItem>
@{
    ViewData["Title"] = "House Index";
}
<h1>House Index</h1>
<p>
    <a asp-action="Create">Create House</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Beds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Baths)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
         @foreach (var item in Model)
         {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Beds)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Baths)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ListingDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "House", new { id = item.Id}) |
                    @Html.ActionLink("Details", "Details", "House", new { id = item.Id}) |
                    @Html.ActionLink("Delete", "Delete", "House", new { id = item.Id})
                </td>
            </tr>
         }
    </tbody>
</table>