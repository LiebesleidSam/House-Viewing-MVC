@model HouseViewingMVC.Models.House.HouseListItem
@{
    ViewData["Title"] = "House Search";
}
<h1>House Search</h1>
<form asp-action="SearchResults">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Beds" class="control-label"></label>
        <input asp-for="Beds" class="form-control" />
        <span asp-validation-for="Beds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Baths" class="control-label"></label>
        <input asp-for="Baths" class="form-control" />
        <span asp-validation-for="Baths" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>