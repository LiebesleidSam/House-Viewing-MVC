@model HouseViewingMVC.Models.House.HouseCreate
@{
    ViewData["Title"] = "Create a House";
}

<h1>Create a House</h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Beds" class="control-label"></label>
        <input asp-for="Beds" class="form-control" />
        <span asp-validation-for="Beds" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Baths" class="control-label"></label>
        <input asp-for="Baths" class="form-control" />
        <span asp-validation-for="Baths" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}        
}